<!-- Chat Button -->
<button id="chatButton" class="fixed bottom-4 right-4 bg-blue-500 text-white p-4 rounded-full shadow-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
    </svg>
</button>

<!-- Full Chat Modal -->
<div id="chatModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-gray-900 w-[1000px] h-[600px] rounded-lg shadow-xl flex overflow-hidden">
        <!-- Chat Area -->
        <div class="flex-1 flex flex-col border-r border-gray-700">
            <!-- Chat Header -->
            <div class="p-4 border-b border-gray-700">
                <div class="flex items-center text-sm">
                    <a href="#" class="text-gray-400 hover:text-white">Main page</a>
                    <span class="mx-2 text-gray-600">/</span>
                    <span>Request #11959197</span>
                </div>
                <div class="flex justify-between items-center mt-2">
                    <h3 class="text-lg font-semibold text-white">Chat with Support</h3>
                    <span class="px-2 py-1 text-xs bg-gray-700 rounded text-white">OPEN</span>
                </div>
            </div>

            <!-- Chat Messages -->
            <div id="chatMessages" class="flex-1 overflow-y-auto p-4 space-y-4">
                <!-- Messages will be dynamically added here -->
            </div>

      
        </div>

        <!-- Sidebar -->
        <div class="w-80 flex flex-col">
            <div class="p-4 border-b border-gray-700">
                <h3 class="font-semibold text-white">My requests (3)</h3>
                <p class="text-sm text-gray-400 mt-2">Please check your contact email inbox for request details.</p>
            </div>
            <div class="flex-1 overflow-y-auto">
                <div class="p-4 space-y-4">
                    <div class="border border-gray-700 rounded p-3 hover:bg-gray-800 cursor-pointer">
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-400">JUL 31, 2024</span>
                            <span class="px-2 py-1 text-xs bg-gray-700 rounded text-white">CLOSED</span>
                        </div>
                        <p class="mt-2 font-medium text-white">#11959197: Chat with Support</p>
                    </div>
                    <div class="border border-gray-700 rounded p-3 hover:bg-gray-800 cursor-pointer">
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-400">JAN 21, 2024</span>
                            <span class="px-2 py-1 text-xs bg-gray-700 rounded text-white">CLOSED</span>
                        </div>
                        <p class="mt-2 font-medium text-white">#10224027: Booking Issue</p>
                    </div>
                    <div class="border border-gray-700 rounded p-3 hover:bg-gray-800 cursor-pointer">
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-gray-400">DEC 16, 2023</span>
                            <span class="px-2 py-1 text-xs bg-gray-700 rounded text-white">CLOSED</span>
                        </div>
                        <p class="mt-2 font-medium text-white">#08001748: Payment Problem</p>
                    </div>
                </div>
            </div>
            <div class="p-4 border-t border-gray-700">
                <form id="newRequestForm" asp-action="CreateChatAction" asp-controller="Help"   method="post">
                    <!-- Dropdown for selecting topic -->
                    <div class="mb-4">
                        <label for="Topic" class="block text-white">Select Topic</label>
                        <select id="topic" name="Topic" class="w-full bg-gray-800 text-white border border-gray-700 rounded p-2">
                            <option value="booking">Booking</option>
                            <option value="support">Support</option>
                            <option value="payment">Payment Issues</option>
                            <option value="general">General Inquiry</option>
                         
                        </select>
                    </div>

                    <!-- Submit Button to create the new request -->
                    <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                        CREATE NEW REQUEST
                    </button>
                </form>
            </div>

        </div>

        <!-- Close Button -->
        <button id="closeChat" class="absolute top-4 right-4 text-gray-400 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>
</div>



<script>
    const chatButton = document.getElementById('chatButton');
    const chatModal = document.getElementById('chatModal');
    const closeChat = document.getElementById('closeChat');
    const chatForm = document.getElementById('chatForm');
    const messageInput = document.getElementById('messageInput');
    const chatMessages = document.getElementById('chatMessages');
   


    chatButton.addEventListener('click', () => {
        chatModal.classList.remove('hidden');
    });

    closeChat.addEventListener('click', () => {
        chatModal.classList.add('hidden');
    });

 
</script>