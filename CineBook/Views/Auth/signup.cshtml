@using CineBook.DTO
@model RegisterViewModel
@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Movie Ticket Booking</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #1f1f1f, #343a40); /* Dark gradient background */
            color: white;
            font-family: 'Arial', sans-serif;
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.75); /* Semi-transparent black */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .form-container:hover {
                transform: scale(1.05);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .form-label {
            font-weight: bold;
            font-size: 1.1rem;
        }

        .form-control {
            background-color: #343a40;
            color: white;
            border: 1px solid #555;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #dc3545;
                box-shadow: 0 0 8px rgba(220, 53, 69, 0.5);
            }

        .text-black-50 {
            color: rgba(0, 0, 0, 0.5);
        }

        .text-center {
            font-size: 1.1rem;
        }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>

    <!-- Centered Register Form -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-4">
            <form asp-action="SignupUser" method="post" asp-controller="Auth" class="form-container">
                <h1 class="text-center text-danger mb-4">Register</h1>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-danger w-100">Register</button>
            </form>

            <div class="mt-3 text-center">
                <a class="text-white" asp-action="signin" asp-controller="Auth">Already have an account? Sign In</a>
            </div>
        </div>
    </div>

</body>
</html>
