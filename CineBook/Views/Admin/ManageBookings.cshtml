@model List<Booking>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Manage Bookings</h1>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="w-full">
            <thead class="bg-gray-200">
                <tr>
                    <th class="px-4 py-2 text-left">Booking ID</th>
                    <th class="px-4 py-2 text-left">Event</th>
                   
                    <th class="px-4 py-2 text-left">IsCompleted</th>
                    <th class="px-4 py-2 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-4 py-2">@item.Id</td>
                        <td class="px-4 py-2">@item.movie.Title</td>
                        <td class="px-4 py-2"><span class="bg-green-200 text-green-800 py-1 px-2 rounded-full text-sm">@item.IsCompleted</span></td>
                        <td class="px-4 py-2">
                            <button class="bg-blue-500 hover:bg-blue-600 text-white py-1 px-2 rounded mr-2">View</button>
                            <button class="bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded">Cancel</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>